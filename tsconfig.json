{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es2015",
            "dom"
        ],
        "strict": false,
        "declaration": true,
        "outDir": "out",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "include": [
        "lib/**/*",
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}